<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <!--按钮按下时的效果 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 渐变： 以圆中心 向周围扩散 -->
			<corners android:radius="4dp"/>
			<solid android:color="@color/result_minor_text"/>
			<stroke android:width="0.5dp" android:color="@color/result_minor_text"></stroke>
			
		</shape>
    </item>
    
    
    <!-- 默认效果   #FF9100    @color/white-->
    <item>
        <shape>
			<corners android:radius="4dp"/>
			<solid android:color="@color/result_minor_text"/>
			<stroke android:width="0.5dp" android:color="@color/result_minor_text"></stroke>
			
		</shape>
    </item>
    
    
</selector>

<!-- 浅灰色背景，边框是灰色-->