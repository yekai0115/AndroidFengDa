<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="22.5dp">
        <ImageView
            android:id="@+id/tv_img_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="9.5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fengda.app.view.HandyTextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/tv_color2"
                    android:textSize="@dimen/size_16"  />
                <com.fengda.app.view.HandyTextView
                    android:id="@+id/tv_team_leavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="市代理"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/tv_color2"
                    android:textSize="@dimen/size_15"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业绩:"
                    android:textSize="@dimen/size_13"
                    android:textColor="@color/tv_color2"/>
                <TextView
                    android:id="@+id/tv_team_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="888万"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_13"
                    android:textColor="@color/tv_color2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队:"
                        android:textSize="@dimen/size_12"
                        android:textColor="@color/color2"/>

                    <com.fengda.app.view.HandyTextView
                        android:id="@+id/tv_team_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="15人"
                        android:textColor="@color/color2"
                        android:textSize="@dimen/size_12" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>