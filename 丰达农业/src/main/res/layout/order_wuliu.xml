<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_main_weixin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_blank_color"
    android:orientation="vertical">


    <com.fengda.app.widget.TopNvgBar5
        android:id="@+id/llytTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:lvisible="true"
        custom:rvisible="false"
        custom:title="@string/tishi_50" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blank_color"
        android:orientation="vertical">


        <com.fengda.app.widget.PagerSlidingTabStrip
            android:id="@+id/orderTabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            custom:pstsTabPaddingLeftRight="15dp" />


        <!-- this is part 1 -->
        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>