<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.fengda.app.view.HandyTextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="dd"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/tv_color2"
                android:textSize="@dimen/size_16" />
            <com.fengda.app.view.HandyTextView
                android:id="@+id/iar_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/tv_color2"
                android:textSize="@dimen/size_13" />
            <com.fengda.app.view.HandyTextView
                android:id="@+id/iar_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:background="@drawable/huanxing_shape"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/color38"
                android:textSize="@dimen/size_11" />
            <com.fengda.app.view.HandyTextView
                android:id="@+id/iar_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:background="@drawable/huanxing_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_13" />
        </LinearLayout>
        <com.fengda.app.view.HandyTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="2017"
            android:textColor="@color/tv_none"
            android:textSize="@dimen/size_14"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="25dp"
        android:gravity="right"
        android:orientation="vertical">
        <com.fengda.app.view.HandyTextView
            android:id="@+id/ex_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="兑换成功"
            android:visibility="gone"
            android:textColor="@color/bg_main_bottom"
            android:textSize="@dimen/size_14"  />
        <com.fengda.app.view.HandyTextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1111"
            android:textStyle="bold"
            android:textColor="@color/tv_color2"
            />
    </LinearLayout>
</LinearLayout>